<%= simple_form_for @client, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <%= f.input :address, :input_html => { :rows => 3 } %>
  <%= f.input :comments, :input_html => { :rows => 5 } %>
  <%= f.input :picture %>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', clients_path, :class => 'btn' %>
  </div>
<% end %>
