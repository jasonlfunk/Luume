<div class="hero-unit">
	<h1>Luume: Project Management</h1>
  <p>Written by Jason, for Jason</p><br/>
  <% unless current_user %>
    <%= form_tag sessions_path, :class => 'form-horizontal' do %>
      <div class="control-group">
        <%= label_tag :login, "Email Address", :class => 'control-label'  %>
        <div class="controls">
          <%= text_field_tag :login, params[:login] %>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag :password, "Password", :class => 'control-label' %>
        <div class="controls">
          <%= password_field_tag :password %>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= submit_tag "Log in", :class=> "btn btn-primary"%>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <small>Don't have an account? <%= link_to "Sign up!", signup_path %></small>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
